{% extends "layout.jinja" %}
{% import "helpers.jinja" as h %}
{% set path = [
    (url_for('.main_page'), 'Home'),
    (url_for('.author_books', author_id=book.authors[0].id), book.authors[0].full_name),
    (url_for('.book_info', book_id=book.id), book.title)
] %}
{% block body %}
    <div class="row">
        <center>
        <div class="span4">
            {% for author in book.authors %}
                <h4>{{ author.full_name }} </h4>
            {% endfor %}
        </div>
        <div class="span4">
            <h3>{{ book.title }}</h3>
        </div>
        {% if book.sequence %}
            <div class="span4">
                <h4>{{ book.sequence.title }} # {{ book.sequence_number }}</h4>
            </div>
        {% endif %}
        </div>
        </center>
    {% if book.annotation %}
        <p> <blockquote> {{ book.annotation }} </blockquote> </p>
    {% endif %}
    
    <p>
    {% if book.genres %}
        {% for genre in book.genres %}
           <span class="label label-inverse">{{ genre.title }}</span> 
        {% endfor %}
    {% endif %}
    </p>

    <p>
        {{ h.download_buttons(book.id) }}
    </p>
{% endblock %}
